<Window x:Class="StudentRegistrationWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentRegistrationWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="372.592" Width="498.171">
    <Grid Margin="0,0,2,-21">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="373*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Username" Grid.Column="1" HorizontalAlignment="Left" Margin="108,118,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Password" Content="Password" Grid.Column="1" HorizontalAlignment="Left" Margin="108,204,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="256,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPassword" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="256,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSignIn" Content="Sign In" Grid.Column="1" HorizontalAlignment="Left" Margin="256,295,0,0" VerticalAlignment="Top" Width="75" Click="btnSignIn_Click"/>

    </Grid>
</Window>
